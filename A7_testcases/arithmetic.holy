summon HolyScript

    invoke int add(int x, int y) {
        deliver x + y;
    }

    invoke int sub(int x, int y) {
        deliver x - y;
    }

    invoke int mul(int x, int y) {
        deliver x * y;
    }

    invoke int div(int x, int y) {
        belief (y == 0) {
            preach("Error: Division by zero");
            deliver 0;
        }
        deliver x / y;
    }

doom
